@model List<WebGoT.Models.House.IndexViewModel>
@{
    ViewBag.Title = "Game of Thrones";
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @RenderPage("/Views/Shared/headerGame.cshtml")
</head>

<body>

    <nav id="menu" class="nav">
        <table>
            <tr>

                @foreach (var house in Model)
                {
                    <td style="width:130px!important">
                        <i><img src='~/images/logo/@(house.Name).jpg' onclick="uploadChar('@(house.Name)');" class="img-circle" /></i>
                        <span>@house.Name</span>
                    </td>
                    
                }
           
            </tr>

        </table>

    </nav>

    <table id="table" style="width:90%">
        @foreach (var house in Model)
    {
        <tr id="@(house.Name)" style="display: none;">

            <td rowspan="2" id="cel" align="center">
                <!--<img src="~/images/houses/@(house.Name).png" /> -->
                <div style="margin-left:10px;margin-top:10px">
                    <div >HOUSE @(house.Name)</div>

                    <br />

                    <div ><label>Characters : </label>@(house.Housers.Count)</div>
                    <br />

                    <div ><label>Unities : </label> @(house.NumberOfUnities)</div>
                

                </div>

                <button type="button" class="btn btn-light" onclick="location.href='/Game/Partie?id=@(house.Id)'">Jouer</button>
            </td>

            @foreach (var character in house.Housers)
            {
            <td id="@(character.firstName)" class="per" valign="top">

                <div style="margin-left:10px;margin-top:10px">
                    <div >@(character.firstName) @(character.lastName)</div>

                    <br />

                    <div><label>Bravoury : </label>@(character.bravoury)</div>
                    <br />

                    <div ><label>Crazyness : </label> @(character.crazyness)</div>
                    <br />

                    <div ><label>Pv : </label> @(character.pv)</div>


                </div>

            </td>
            }

        </tr>
    }

    </table>

    <script>

        function uploadChar(name) {

            var infos = document.getElementById('table');
            infos.rows[0].style.display = 'none';
            infos.rows[1].style.display = 'none';
            infos.rows[2].style.display = 'none';
            infos.rows[3].style.display = 'none';
            infos.rows[4].style.display = 'none';
            infos.rows[5].style.display = 'none';
            infos.rows[6].style.display = 'none';
            infos.rows[7].style.display = 'none';


            var infos = document.getElementById(name);
            infos.style.display = 'block';
            infos.style.color = "White";

        }

        function play(house) {

        }

        function select(name) {
            var pas;
            for (pas = 1; pas < 5; pas++) {
                var cel = document.getElementById(pas);
                cel.style.borderColor = "";
                cel.style.borderStyle = "";
                cel.style.backgroundColor = "";
            }
            var cel = document.getElementById(name);
            cel.style.borderColor = "#7DCB7B";
            cel.style.borderStyle = "solid";
            cel.style.backgroundColor = "#7DCB7B";


        }
    </script>
</body>
</html>
