@model WebGoT.Models.War.WarViewModel
@{
    ViewBag.Title = "Fail";
    Layout = null;
}

<html>
<head>
    <title>Game Of Thrones</title>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/game.css" />
</head>
<body>

    <h2></h2>
    <div id="divInfos">
        <h1 id="resultFail">You win the battle</h1>
        <button id="retour" type="button" class="btn btn-light" onclick="location.href='/Game/Choix'">Relancer le jeu</button>
    </div>
    <br />
    <div id="tableFights">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Winning House</th>
                    <th scope="col">House Challeging</th>
                    <th scope="col">House Challeged</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fight in Model.Fights)
                {
                    <tr>
                        <th scope="row">@(fight.WinningHouse)</th>
                        <td>@(fight.HouseChalleging)</td>
                        <td>@(fight.HouseChalleged)</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>


</body>

</html>

